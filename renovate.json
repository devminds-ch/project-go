{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "default:automergeMinor",
    "default:rebaseStalePrs"
  ],
  "minimumReleaseAge": "14 days",
  "prCreation": "not-pending",
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "//golang-ci-lint\\.yml$/"
      ],
      "matchStrings": [
        "GOLANGCI_LINT_VERSION: (?<currentValue>.+)\\n"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "golangci/golangci-lint"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "//project-build-test\\.yml$/"
      ],
      "matchStrings": [
        "GO_VERSION: (?<currentValue>.+)\\n"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "golang/go"
    }
  ],
  "packageRules": [
    {
      "groupName": "GitHub Actions",
      "matchManagers": [
        "github-actions"
      ]
    },
    {
      "groupName": "GitHub Actions",
      "matchManagers": [
        "custom.regex"
      ],
      "matchDepNames": [
        "golangci/golangci-lint"
      ]
    },
    {
      "groupName": "Go",
      "matchManagers": [
        "devcontainer",
        "gomod"
      ]
    },
    {
      "groupName": "Go",
      "matchManagers": [
        "custom.regex"
      ],
      "matchDepNames": [
        "golang/go"
      ]
    }
  ]
}